	<update id="updateUser" parameterType="userVo">
		update jspuser
		set pass= #{pass}
			, name = #{name}
			, addr1 = #{addr1}
			, addr2 = #{addr2}
			, zipcd = #{zipcd}
			, email = #{email}
			, tel = #{tel}
			, birth = #{birth}
		<if test="profile != null">
			, profile = #{profile}
			</if>
		where userId = #{userId}
	</update>
	 
