<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<select id="selectUserAll" resultType="userVo">
		select * from jspuser
	</select>
	

	<select id="selectUser" parameterType="String" resultType="userVo">
		select * from jspuser
		where userid = #{userid}
	</select>

	<select id="selectUserByVo" parameterType="userVo"
		resultType="userVo">
		select * from jspuser
		where userId = #{userId}
	</select>

	<select id="selectUsrPageList" parameterType="pageVo"
		resultType="userVo">
		select * from(
		select rownum rnum ,a.*
		from
		(select jspuser.*
		from jspuser
		order by userId) a)
		where rnum between #{page}*#{pageSize}-(#{pageSize}-1) and
		#{page}*#{pageSize}

	</select>

	<select id="getUserCnt" resultType="int">
		select count(*) from jspuser
	</select>
	
	<!-- 사용자 등록 -->
	<insert id="inserUser" parameterType="userVo">
		insert into jspuser (userId ,pass, name, addr1, addr2 , zipcd, email, tel, birth, profile) 
		values (#{userId},#{pass}, #{name}, #{addr1},#{addr2},#{zipcd},#{email},#{tel},#{birth}, #{profile, jdbcType=VARCHAR})
	</insert>
	
	<delete id="deleteUser" parameterType="String">
		delete from jspuser
		where userId = #{userId}
	</delete>
	
